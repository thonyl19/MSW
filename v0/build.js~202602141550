const fs = require('fs');
const path = require('path');

/**
 * è¨­å®šè¼¸å‡ºç›®éŒ„
 * å»ºè­°å°‡æ•´å€‹ src ç›®éŒ„åŒæ­¥éå»ï¼Œä»¥ç¶­æŒ ESM çš„ç›¸å°è·¯å¾‘çµæ§‹
 */
const sourceDir = path.join(__dirname, 'src');
const targetDir = 'Q:/ZAC_Dev/Genesis_MVC/wwwroot/';

/**
 * éè¿´è¤‡è£½ç›®éŒ„å‡½æ•¸
 */
function copyFolderSync(from, to) {
    if (!fs.existsSync(to)) {
        fs.mkdirSync(to, { recursive: true });
    }
    fs.readdirSync(from).forEach(element => {
        const fromPath = path.join(from, element);
        const toPath = path.join(to, element);
        if (fs.lstatSync(fromPath).isDirectory()) {
            copyFolderSync(fromPath, toPath);
        } else {
            // åƒ…è¤‡è£½ .js æª”æ¡ˆ (æˆ–æ˜¯æ‚¨éœ€è¦çš„å…¶ä»–éœæ…‹è³‡æº)
            if (element.endsWith('.js') || element.endsWith('.json')) {
                fs.copyFileSync(fromPath, toPath);
            }
        }
    });
}

try {
    console.log("ğŸ“‚ æ­£åœ¨åŒæ­¥åŸå§‹ç¢¼è‡³ MVC å°ˆæ¡ˆ...");
    
    // æ¸…é™¤èˆŠæœ‰çš„å‰¯æœ¬ (é¸é…ï¼Œç¢ºä¿åŒæ­¥)
    if (fs.existsSync(targetDir)) {
        // Node 14.14+ æ”¯æ´ fs.rmSync
        if (fs.rmSync) {
            fs.rmSync(targetDir, { recursive: true, force: true });
        }
    }

    copyFolderSync(sourceDir, targetDir);
    
    console.log("ğŸš€ åŒæ­¥æˆåŠŸï¼");
    console.log(`ğŸ“ ç›®çš„åœ°: ${targetDir}`);
    console.log("ï¿½ ç¾åœ¨æ‚¨å¯ä»¥åœ¨ HTML ä¸­è¼‰å…¥è·¯å¾‘: /pages/operation.js");
} catch (err) {
    console.error("âŒ åŒæ­¥å¤±æ•—:", err);
    process.exit(1);
}