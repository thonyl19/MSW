<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <httpProtocol>
            <customHeaders>
                <!-- 
                  MSW 子目錄部署關鍵：
                  當 mockServiceWorker.js 不在根目錄時，必須由伺服器回傳此 Header，
                  瀏覽器才允許 Service Worker 擴大攔截範圍 (Scope) 到上層目錄。
                -->
                <add name="Service-Worker-Allowed" value="/" />
            </customHeaders>
        </httpProtocol>
    </system.webServer>
</configuration>
